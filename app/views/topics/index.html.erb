<div class="boardHeader text-center"><h1>Welcome to the WyrmNest messageboard!</h1></div>
<%= link_to 'start a new thread', new_topic_path, class: "col-2 offset-5 btn btn-success" %>

<% @topics.each do |topic| %>
  <div class="box col-10 offset-1">
    <%= link_to topic.title, topic_path(topic) %>&nbsp;
    <% if topic.user.present? %>
      <small><%= "created by " %><i><%= topic.user.username %>&nbsp;</i><%= time_ago_in_words(topic.created_at) %><%= " ago" %></small> 
    <% end %>
  </div>
<% end %>

<div class="pagelist col-3 offset-5 text-center"><%= will_paginate @topics %></div>
